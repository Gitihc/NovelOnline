<script id="menuTableTpl" type="text/html">
    <table class="layui-table">
        <col width="120px" />
        <col width="120px" />
        <col width="120px" />
        <col width="220px" />
        <col width="80px" />
        <col width="80px" />
        <thead>
            <tr>
                <th>模块名称</th>
                <th>父模块名称</th>
                <th>级联id</th>
                <th>Link</th>
                <th>图标</th>
                <th>排序号</th>
            </tr>
        </thead>
        <tbody>
            {{# layui.each(d.rows,function(index,r){}}
            <tr>
                <td><input type="checkbox" />{{ r.name }}</td>
                <td>{{ r.parentName || '' }}</td>
                <td>{{ r.cascadeId || '' }}</td>
                <td>{{ r.link || '' }}</td>
                <td>{{ r.icon || '' }}</td>
                <td>{{ r.sort || '' }}</td>
            </tr>
            {{# }); }}
        </tbody>
    </table>
</script>
<script>
    var $;
    layui.config({ base: '/layui/extend/' }).use(['element', 'table', 'laytpl', 'treegrid'], function () {
        var table = layui.table;
        laytpl = layui.laytpl,
            treegrid = layui.treegrid;
        $ = layui.$;
        treegrid.config.render = function (viewid, data) {
            var view = document.getElementById(viewid).innerHTML;
            return laytpl(view).render(data) || '';
        };

        tree1 = treegrid.createNew({
            elem: 'tbModulesTree',
            view: 'menuTableTpl',
            url: '/ModuleManager/GetTreeGridOfAllModules',
            id: 'id',
            root: '00000000-0000-0000-0000-000000000000',
            parentid: 'parentId',
            singleSelect: true
        });
        tree1.build();
    });
</script>


