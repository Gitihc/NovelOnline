                <td lay-data="{field:'cascadeId',width:120,align:'center',fixed:true}">级联id</td>
                <td lay-data="{field:'link',width:220,align:'center',fixed:true}">Link</td>
                <td lay-data="{field:'icon',width:80,align:'center',fixed:true,templet: '#iconTpl'}">图标</td>
