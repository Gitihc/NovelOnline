@section header
    {
      <link href="~/easyui/themes/metro-orange/easyui.css" rel="stylesheet" />
    <link href="~/easyui/themes/icon.css" rel="stylesheet" />
    <style>
        .layui-elem-quote {
            margin-bottom: 2px;
            padding: 5px;
            border-bottom: 1px solid #009688;
        }

        button i {
            margin-right: 5px;
        }

        .combo {
            border-radius: 0px;
            height: 36px;
            border-radius: 0 2px 2px 0;
        }

        .panel-htop {
            z-index: 29891015 !important;
        }
