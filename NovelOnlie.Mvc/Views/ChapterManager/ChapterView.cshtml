@{
    Layout = null;
}
<html>
<head>
    <title id="title"></title>
    <link rel="stylesheet" href="http://cdn.static.runoob.com/libs/bootstrap/3.3.7/css/bootstrap.min.css" />
    <link rel="stylesheet" href="//cdn.bootcss.com/font-awesome/4.7.0/css/font-awesome.min.css"
          media="all">
    <link href="~/css/chapterview.css" rel="stylesheet" />
</head>
<body class="theme-0">
    <!--内容展示区-->
    <div id="content-main" class="container">
        <div class="page-header" style="margin-right: -15px; margin-left: -15px;">
            <h1 id="title" style=""></h1>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="row font-family01" id="content">
                </div>
                <div class="row">
                    <div class="col-lg-offset-3 col-lg-6">
                        <ul class="pagination"></ul>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="chapter-control dib-wrap" data-l1="3" style="text-align:center;">
                <a id="btn_preChapter" class="disabled" href="javascript:void(0);" onclick="preChapter(); return false;">上一章</a>
                <span>|</span>
                <a id="btn_nextChapter" class="disabled" href="javascript:void(0);" onclick="nextChapter(); return false;">下一章</a>
            </div>
        </div>
    </div>
    <!--回到顶部-->
    <div class="fixed-btn">
        <a class="go-top" href="#" title="返回顶部" style="display: inline-block;">
            <i class="fa fa-angle-up">
            </i>
        </a>
    </div>
    <!--浮动菜单-->
    <div class="fixed-menu">
        <dl>
            <dd>
                <a id="chaperMenuBtn" href="##" title="目录" style="display: inline-block;">
                    <i class="fa fa-list-ul">
                    </i><span>目录</span>
                </a>
            </dd>
            <dd>
                <a id="bac" href="##" title="设置" style="display: inline-block;">
                    <i class="fa fa-cog fa-lg">
                    </i><span>设置</span>
                </a>
            </dd>
        </dl>
    </div>
    <div class="float-wrap">
        <!--目录浮动层-->
        <div class="panel-wrap catalog">
            <a class="close-panel"><i class="fa fa-close"></i></a>
            <div class="panel-box">
                <div class="title">
                    <span style="color: #ED3029; border-bottom: 1px solid #ED3029; font-size: 18px;">目录</span>
                </div>
                <div id="CatalogContainer" style="overflow: auto;">
                    <ul>
                        加载中...
                    </ul>
                </div>
            </div>
        </div>
        <!--设置浮动层-->
        <div class="panel-wrap setting">
            <a class="close-panel"><i class="fa fa-close"></i></a>
            <div class="panel-box">
                <h4 class="lang">
                    设置
                </h4>
                <div class="setting-list-wrap">
                    <ul>
                        <!--主题-->
                        <li class="theme-list" id="j_themeList">
                            <i>阅读主题</i> <span title="默认" class="theme-0 act">
                                <span class=" fa fa-check"></span>
                            </span><span title="牛皮纸" class="theme-1 ">
                                <span class=" fa fa-check"></span>
                            </span><span title="淡绿色" class="theme-2 ">
                                <span class=" fa fa-check">
                                </span>
                            </span><span title="淡蓝色" class="theme-3 ">
                                <span class=" fa fa-check"></span>
                            </span><span title="淡粉色" class="theme-4 "><span class=" fa fa-check"></span></span>
                            <span title="灰色" class="theme-5 "><span class=" fa fa-check"></span></span><span title="黑色" class="theme-6 ">
                                <span class=" fa fa-check"></span><cite class=" fa fa-moon-o">
                                </cite>
                            </span>
                        </li>
                        <!--字体-->
                        <li class="font-family" id="j_fontFamily">
                            <i>正文字体</i> <span class="yahei act">雅黑</span>
                            <span data-st="1" class="yahei ">宋体</span> <span data-st="2" class="yahei ">楷书</span>
                        </li>
                        <!--字体大小-->
                        <li class="font-size" id="j_fontSize">
                            <i>字体大小</i> <cite>
                                <span class="prev">
                                    <span class="fa fa-minus"></span>
                                </span><b></b><span class="lang">18</span> <b></b><span class="next"><span class="fa fa-plus"></span></span>
                            </cite>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <script src="~/layui/layui.js"></script>
    <script src="~/easyui/jquery.min.js"></script>
    <script src="~/easyui/jquery.easyui.min.js"></script>
    <script src="~/easyui/local/easyui-lang-zh_CN.js"></script>
    <script src="~/userjs/jquery.base64.js"></script>
    <script src="~/userjs/chapterview.js"></script>
</body>
</html>